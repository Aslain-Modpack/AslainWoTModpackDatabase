<Window x:Class="RelhaxDescriptionDesigner.Designs.TheIllusion.ColourApparatus.ColourApparatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RelhaxDescriptionDesigner.Designs.TheIllusion.ColourApparatus"
        mc:Ignorable="d"
        Title="ColourApparatus" Height="450" Width="800">
    <Grid>
        <Slider Name="Red" Maximum="255" Width="500" Margin="0,100,0,0" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True"/>
        <Slider Name="Blue" Maximum="255" Width="500" Margin="0,130,0,0" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True"/>
        <Slider Name="Green" Maximum="255" Width="500" Margin="0,160,0,0" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True"/>
    </Grid>
</Window>
