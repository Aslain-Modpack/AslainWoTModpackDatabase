<Window x:Class="RelhaxDescriptionDesigner.Designs.TheIllusion.StarTrek.ST_LoadingScreens"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RelhaxDescriptionDesigner.Designs.TheIllusion.StarTrek"
        mc:Ignorable="d"
        Title="ST_LoadingScreens" Height="450" Width="800">
    <Grid>
        <Image Name="Borg Image" Source="http://bigmods.relhaxmodpack.com/Medias/Pictures/garage_graphics/LoadingSplash/Garage_Graphics_LoadingSplash_TheIllusion_Borg.png"
    Stretch="Uniform" Margin="-10,215,418,0">
            <Image.ToolTip>
                <ToolTip DataContext="{Binding PlacementTarget, 
            RelativeSource={RelativeSource Self}}">
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="5,7,5,5">
                        <Image Source="{Binding Source}" Stretch="Fill" Height="480" Width="720"/>
                    </Border>
                </ToolTip>
            </Image.ToolTip>
        </Image>
    </Grid>
</Window>
