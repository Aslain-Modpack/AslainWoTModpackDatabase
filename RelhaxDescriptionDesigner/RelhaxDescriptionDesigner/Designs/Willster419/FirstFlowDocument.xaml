<Window x:Class="RelhaxDescriptionDesigner.Designs.Willster419.FirstFlowDocument"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RelhaxDescriptionDesigner.Designs.Willster419"
        mc:Ignorable="d"
        Title="FirstFlowDocument" Height="450" Width="800">
    <!-- If you are designing a FlowDocument description, you should setup your window like this, having the root as a FlowDocumentScrollViewer, and then a FlowDocument. -->
    <!-- This matches the implementation that will be used for the description window -->
    <FlowDocumentScrollViewer>
        <FlowDocument>
            <Section>
                <Paragraph>
                    Hello Relhax!
                </Paragraph>
            </Section>
        </FlowDocument>
    </FlowDocumentScrollViewer>
</Window>
